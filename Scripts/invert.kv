<HomeScreen>:
    name: "Home"
    id: home
    Image:
        source: "../Art/HOMESCR.png"
    FloatLayout:
        Button:
            pos_hint: {"x": 0.27, "y": 0.52}
            size: 247, 111
            size_hint: None, None
            background_normal: "../Art/CLASSIC.png"
            background_down: "../Art/CLASSIC_DOWN.png"
