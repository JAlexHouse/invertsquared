        Button:
            background_normal: "Art/PAUSE.png"
            background_down: "Art/PAUSE_DOWN.png"
            #pos: 0, 540
            size: 140, 140
            size_hint: None, None
            on_release: root.open_pause()
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ""
        Label:
            id: extra_settings
            text: ''
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 1}
        Label:
            id: moves

