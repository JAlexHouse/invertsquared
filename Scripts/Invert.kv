#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManager:
    transition: FadeTransition()
    HomeScreen:
    SettingsScreen:
    PlaySetScreen:
    PlayScreen:

<HomeScreen>:
    name: "Home"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "Welcome to Invert2!"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        Button:
            text: "Play"
            size_hint: (0.1, 0.1)
            on_release: app.root.current = "Play"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            text: "Settings"
            size_hint: (0.1, 0.1)
            on_release: app.root.current = "Settings"
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        Button:
            text: "Quit"
            size_hint: (0.1, 0.1)
            on_release: quit()

<SettingsScreen>:
    name: "Settings"
    Label:
        text: "Settings"
        pos: 0, 250
    BoxLayout:
        orientation: "horizontal"
        size: (20, 20)
        Button:
            text: "Setting 1"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 2"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 3"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Back to Home"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Home"

<PlaySetScreen>:
    name: "PlaySet"
    Label:
        text: "Settings"
    BoxLayout:
        orientation: "horizontal"
        size: (20, 20)
        Button:
            text: "Setting 1"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 2"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 3"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Back to Home"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Home"
        Button:
            text: "Resume Game"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Play"

<PlayScreen>:
    name: "Play"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "Time to Play! :D"
    RelativeLayout:
        Button:
            text: "Settings"
            size_hint: (0.1, 0.1)
            pos: 0, 540
            on_release: app.root.current = "PlaySet"
        Button:
            text: "Home"
            size_hint: (0.1, 0.1)
            pos: 80, 540
            on_release: app.root.current = "Home"