<Pause>
    id: pop
    name: "Pause"
   # opacity: 0
    size: 450, 450
    size_hint: None, None
    auto_dismiss: False
    background_color: 0,0,0,0
    Image:
        source: "Art/PAUSESCR.png"

    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        padding: 70, 70
        Button:
            background_normal: "Art/HOME.png"
            background_down: "Art/HOME_DOWN.png"
            size: 170, 170
            size_hint: None, None
            on_release:
                app.root.current = "Home"
                app.root.ids.play.clear_game()
                pop.dismiss()
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        padding: 70, 70
        Button:
            background_normal: "Art/SETTINGS.png"
            background_down: "Art/SETTINGS_DOWN.png"
            size: 170, 170
            size_hint: None, None
            on_release:
                app.root.current = "Settings"
                pop.dismiss()
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        padding: 70, 110
        Button:
            background_normal: "Art/RESET.png"
            background_down: "Art/RESET_DOWN.png"
            size: 170, 170
            size_hint: None, None
            on_release:
                app.root.current = "Play"
                app.root.ids.play.reset_board()
                # this clears only the player's actions, not the answer key
                pop.dismiss()
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        padding: 70, 110
        Button:
            background_normal: "Art/MENU.png"
            background_down: "Art/MENU_DOWN.png"
            size: 170, 170
            size_hint: None, None
            #on_release: app.root.current = ""
            on_release: pop.dismiss()
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        padding: 0, -50
        Button:
            background_normal: "Art/RESUME.png"
            background_down: "Art/RESUME_DOWN.png"
            size: 295, 265
            size_hint: None, None
            on_release: pop.dismiss()

<PlayScreen>:
    name: "Play"
    Image:
        source: "Art/PLAYSCR.png"

    AnchorLayout:
