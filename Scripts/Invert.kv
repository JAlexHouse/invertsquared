            size: 150, 150
            size_hint: None, None
            on_release: app.root.current = "Settings"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        padding: 0, 12
        Button:
            background_normal: "Art/SHARE.png"
            background_down: "Art/SHARE_DOWN.png"
            size: 150, 150
            size_hint: None, None
