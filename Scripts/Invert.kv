            size_hint: None, None
            background_normal: "CLASSIC.png"
            background_down: "CLASSIC_DOWN.png"
            on_release: app.root.current = "Play"
    FloatLayout:
        Button:
            pos_hint: {"x": 0.25, "y": 0.35}
