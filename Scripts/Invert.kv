#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManager:
    transition: FadeTransition()
    HomeScreen:
    SettingsScreen:
    PlaySetScreen:
    PlayScreen:
    WinScreen:
    LoseScreen:

<HomeScreen>:
    name: "Home"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "Welcome to Invert2!"
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "bottom"
        Button:
            text: "Play"
            size_hint: (0.1, 0.1)
            on_release: app.root.current = "Play"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            text: "Settings"
            size_hint: (0.1, 0.1)
            on_release: app.root.current = "Settings"
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "bottom"
        Button:
            text: "Quit"
            size_hint: (0.1, 0.1)
            on_release: quit()

<SettingsScreen>:
    name: "Settings"
    Label:
        text: "Settings"
        pos: 0, 250
    BoxLayout:
        orientation: "horizontal"
        size: (20, 20)
        Button:
            text: "Setting 1"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 2"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 3"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Back to Home"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Home"

<PlaySetScreen>:
    name: "PlaySet"
    Label:
        text: "Settings"
    BoxLayout:
        orientation: "horizontal"
        size: (20, 20)
        Button:
            text: "Setting 1"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 2"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Setting 3"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
        Button:
            text: "Back to Home"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Home"
        Button:
            text: "Resume Game"
            size_hint: (0.3, 0.3)
            padding: [20, 20]
            on_release: app.root.current = "Play"

<PlayScreen>:
    name: "Play"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "Time to Play! :D"
    RelativeLayout:
        Button:
            text: "Settings"
            size_hint: (0.1, 0.1)
            pos: 0, 540
            on_release: app.root.current = "PlaySet"
        Button:
            text: "Home"
            size_hint: (0.1, 0.1)
            pos: 80, 540
            on_release:
                app.root.current = "Home"
                root.clear_game()
        Button:
            text: "Reset"
            size_hint: (0.1, 0.1)
            pos: 160, 540
            on_release:
                root.reset_board()
        Button:
            text: "Different Key"
            size_hint: (0.1, 0.1)
            pos: 240, 540
            on_release:
                app.root.current = "Home"
                root.clear_game()
                app.root.current = "Play"
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Time Left: " + root.time_remaining
            Label:
                text: ''
                size_hint_x: None
                size: self.texture_size
                pos_hint: {'right': 1}
            Label:
                text: 'Moves Left: ' + str(root.max_moves - root.moves_made)


<WinScreen>:
    name: "Win"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "You won! Niceeee"
    RelativeLayout:
        Button:
            text: "Next"
            size_hint: (0.1, 0.1)
            pos: root.width-root.width/8, 0
            on_release:
                app.root.current = "Home"

<LoseScreen>:
    name: "Lose"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Label:
            text: "Oooops, you lost :(("
    RelativeLayout:
        Button:
            text: "Next"
            size_hint: (0.1, 0.1)
            pos: root.width-root.width/8, 0
            on_release:
                app.root.current = "Home"


